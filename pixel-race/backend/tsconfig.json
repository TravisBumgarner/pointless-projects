{
    "compilerOptions": {
      "noImplicitAny": true,
      "strictNullChecks": true,
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "outDir": "./dist",
      "rootDir": "../",
      "baseUrl": "."
    },
    "include": ["./src/**/*.ts", "../shared/**/*.ts", "./tests/**/*.ts"]
  }